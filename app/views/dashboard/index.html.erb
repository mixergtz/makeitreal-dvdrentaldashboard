
<h2>Ventas globales mes a mes</h2>
<%= column_chart Payment.global_sales_by_month(300), {library: {hAxis: {title: "Mes"}, vAxis: {title: "Ventas(USD)"}}}  %>

<h2>Ventas por categoria</h2>
<%= pie_chart Payment.sales_by_category  %>

<h2>Ventas por sucursal</h2>
<%= column_chart Payment.sales_by_store, {library: {hAxis: {title: "Sucursal"}, vAxis: {title: "Ventas(USD)"}}}  %>

<h2>Mejores 10 compradores</h2>
<%= bar_chart Payment.best_10_customers, {library: {hAxis: {title: "Cliente"}, vAxis: {title: "Ventas(USD)"}}} %>